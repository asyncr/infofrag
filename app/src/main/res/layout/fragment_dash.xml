<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#1A1B1F"
    tools:context=".Dash">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="4dp"
            android:text="Bienvenido(a) "
            android:textColor="#979BAA"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="4dp"
            android:text="Elige una opcion para comenzar..."
            android:textColor="#858793"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titStudents" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subStudents">

            <LinearLayout
                android:id="@+id/groupA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdStudent"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:minHeight="160dp"
                    app:cardBackgroundColor="#303138"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="20dp"
                        android:background="#303138"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/imgStudent"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:padding="10dp"
                            android:src="@drawable/student"
                            />

                        <TextView
                            android:id="@+id/tvStudent"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center|bottom"
                            android:text="Estudiante"
                            android:textColor="#E4E9F8"
                            android:textSize="16sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdMateria"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:minHeight="160dp"
                    app:cardBackgroundColor="#4F5862"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="20dp"
                        android:background="#4F5862"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/imgMateria"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:padding="10dp"
                            android:src="@drawable/teacher"

                            />

                        <TextView
                            android:id="@+id/tvMateria"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center|bottom"
                            android:text="Materia"
                            android:textColor="#E4E9F8"
                            android:textSize="16dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.842"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/groupA"
                app:layout_constraintVertical_bias="0.0">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdCenter"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:minHeight="160dp"
                    app:cardBackgroundColor="#303138"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="20dp"
                        android:background="#303138"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/imgCenter"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:padding="10dp"
                            android:src="@drawable/red"
                            />

                        <TextView
                            android:id="@+id/tvCenter"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center|bottom"
                            android:text="Centro de computo"
                            android:textColor="#E4E9F8"
                            android:textSize="16dp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdBit"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:minHeight="160dp"
                    app:cardBackgroundColor="#4F5862"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="20dp"
                        android:background="#4F5862"
                        android:orientation="vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/imgBit"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:padding="10dp"
                            android:src="@drawable/bit"
                            />
                        <TextView
                            android:id="@+id/tvBit"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center|bottom"
                            android:text="Registro"
                            android:textColor="#E4E9F8"
                            android:textSize="16dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>